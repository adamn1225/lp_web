---
import Layout from "@layouts/Split.astro";
import Section from "@components/Section.astro";
import Page2 from "@components/Page2.astro";
import GuestyListings from "../components/GuestyListings.astro";
import App from "../components/App";
import TagNavigation from "@components/TagNavigation";
---

<Layout title="Properties">
  <Section>
    <div
      class="xs:pt-20 md:pt-24 flex flex-col justify-center items-center bg-white w-full bg-neutral-950/50 bg-center bg-no-repeat"
    >
      <App client:only="react" />
      <TagNavigation client:only />
    </div>
    <div class="mt-10">

        <div class="md:px-24 grid grid-cols-1 md:grid-cols-5 my-0 gap-6">
          <GuestyListings />
        </div>

        <div>
          <span
          class="flex bg-white xs:px-16 justify-center h-full py-2 align-center"
          >
          <button
          id="showHide"
          class="bg-secondary md:text-2xl font-bold py-2 px-4 rounded-md text-slate-100"
          ><span class="door-text">More Listings Here</span></button
          >
        </span>
          <div class="w-full bg-white">
          <span
            id="listing2"
            class="hidden py-7 px-6 md:px-24 grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-6"
            >
            <Page2 />
          </span>
        </div>
      </div>
    </div>
  </Section>
</Layout>
