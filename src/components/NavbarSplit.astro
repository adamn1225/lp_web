import { LayoutGrid, X } from "lucide-react";
---

<div class="absolute top-0 start-0 w-full z-40 bg-white border-slate-100">
  <div id="header">
    <header
      id="MainHeader"
      class="min-h-[70px] w-full max-w-full px-3 flex justify-between items-center shadow lg:shadow-md lg:px-8"
    >
      <div class="flex items-center gap-4">
        <a href="/" class="flex gap-4 py-2">
          <img
            src="/images/lp-final-top.png"
            alt="logo"
            class="xs:w-full xs:h-8 md:w-64"
          />
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button class="p-2 z-50 lg:hidden" id="menuButton">
        <LayoutGrid id="menuIcon" />
        <X id="closeIcon" className="hidden" />
      </button>

      <!-- Desktop Menu -->
      <nav
        id="desktopNav"
        aria-label="Main Navigation"
        class="hidden lg:flex items-center gap-4"
      >
        <a
          href="/about"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
          >About</a
        >
        <a
          href="/linelanding"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
          >Our Services</a
        >
        <a
          href="/property-management"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
          >Property Management</a
        >
        <a
          href="/properties"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
          >All Properties</a
        >
        <a
          href="/contact"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
          >Contact Us</a
        >
        <a
          href="tel:1-800-888-8888"
          class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
        >
          <button
            class="bg-secondary w-full min-w-[120px] font-medium text-lg px-3.5 py-1.5 rounded-3xl text-white"
          >
            1-800-888-8888
          </button>
        </a>
      </nav>
    </header>

    <!-- Mobile Navigation Menu -->
    <nav
      id="mobileNav"
      aria-label="Main Navigation"
      class="absolute top-full z-50 mt-3 right-0 bg-white lg:hidden px-3 shadow-md hidden"
    >
      <ul class="flex flex-col justify-center items-center gap-3">
        <li>
          <a
            href="/about"
            class="hover:text-secondary hover:underline underline-offset-4 text-base py-2 px-3"
            >About</a
          >
        </li>
        <li>
          <a
            href="/linelanding"
            class="py-2 px-3 text-base hover:text-secondary">Our Services</a
          >
        </li>
        <li>
          <a
            href="/property-management"
            class="hover:text-secondary text-base py-2 px-3"
            >Property Management</a
          >
        </li>
        <li>
          <a href="/properties" class="py-2 px-3 text-base hover:text-secondary"
            >All Properties</a
          >
        </li>
        <li>
          <a href="/contact" class="py-2 px-3 text-base hover:text-secondary"
            >Contact Us</a
          >
        </li>
        <li>
          <a
            href="tel:1-800-888-8888"
            class="hover:text-slate-900 text-base py-2 px-3"
          >
            <button
              class="bg-secondary w-full min-w-[120px] font-medium text-lg px-3.5 py-1.5 rounded-3xl text-white"
            >
              1-800-888-8888
            </button>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</div>

<!-- âœ… Working Pure JavaScript Menu Toggle -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const menuButton = document.getElementById("menuButton");
    const menu = document.getElementById("mobileNav");
    const menuIcon = document.getElementById("menuIcon");
    const closeIcon = document.getElementById("closeIcon");

    menuButton.addEventListener("click", () => {
      menu.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  });
</script>
