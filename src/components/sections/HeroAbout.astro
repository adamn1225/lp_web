---
import Container from '@components/Container.astro'
---

<section class="min-h-screen bg-muted-50 dark:bg-muted-900 relative flex flex-col justify-between items-stretch">
  <div class="flex items-center px-6 py-12 md:px-12 flex-grow flex-shrink-0">
    <Container>
      <div class="flex flex-col md:flex-row md:items-center">
        <div class="md:w-1/3 md:p-3">
          <div class="hero-caption">
            <h1 class="font-sans text-muted-900 dark:text-white text-center md:text-start text-3xl font-light leading-none md:text-5xl mb-6">Find the house of your dreams.</h1>
            <h2 class="mb-6 text-xl text-muted-500 dark:text-muted-400 text-center md:text-start leading-tight">We help you find the perfect space that will make you and your family happy.</h2>

            <!-- buttons -->
            <div class="flex justify-center md:justify-start items-center gap-2 mb-2">
              <a
                href="#start-section"
                class="h-11 transition-all duration-300 px-4 py-2 text-center whitespace-nowrap flex justify-center items-center bg-primary-500 text-white text-sm font-medium rounded-sm min-w-32"
                >Learn more</a
              >
              <a
                href="#quote-section"
                class="h-11 border border-muted-200 dark:border-muted-800 text-muted-900 dark:text-white rounded-sm bg-white dark:bg-muted-950 transition-all duration-300 px-4 py-2 text-center whitespace-nowrap flex justify-center items-center is-solid min-w-32"
                >Get a quote</a
              >
            </div>
          </div>
        </div>
        <div class="md:p-3 md:w-3/5 md:ms-[8.3%]">
          <figure class="block relative">
            <img src="/images/illustrations/hero-next.svg" alt="Hero image" />
          </figure>
        </div>
      </div>
    </Container>
  </div>

