---
import { Icon } from 'astro-icon/components'
import { investmentProjects } from '@data/properties'
import Section from '@components/Section.astro'
import Container from '@components/Container.astro'
---

<Section>
  <Container>
    <div class="max-w-4xl">
      <h2 class="font-sans text-muted-900 dark:text-white font-medium text-4xl text-center md:text-start md:leading-tight">Invest in one of our projects</h2>
    </div>

    <div class="relative py-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          investmentProjects.map((project) => (
            <div class="block">
              <a href="#" class="group relative block overflow-hidden">
                <img
                  src={project.image}
                  class="group-hover:grayscale-0 group-hover:opacity-100 group-hover:scale-105 block w-full grayscale-[.5] opacity-90 transition-all duration-300"
                  alt={project.title}
                />
                <div class="absolute top-0 start-0 h-full w-full">
                  <div class="relative w-full h-full flex flex-col justify-end p-6">
                    <div class="p-6 bg-white dark:bg-muted-950">
                      <div class="flex items-center justify-between">
                        <div>
                          <h3 class="font-sans font-medium text-xl text-muted-900 dark:text-white">{project.title}</h3>
                          <p class="text-base text-muted-400">{project.type}</p>
                        </div>
                        <Icon class="size-6 text-primary-500" name="ph:house-duotone" />
                      </div>
                      <div class="grid gap-3 md:gap-0 grid-cols-1 md:grid-cols-3 mt-4">
                        <div class="text-muted-400 gap-1 flex items-center ">
                          <Icon class="size-4" name="ph:bank-duotone" />
                          <span class="text-base">{project.price}</span>
                        </div>
                        <div class="text-muted-400 gap-1 flex items-center ">
                          <Icon class="size-4" name="ph:buildings-duotone" />
                          <span class="text-base">{project.units}</span>
                        </div>
                        <div class="text-muted-400 gap-1 flex items-center ">
                          <Icon class="size-4" name="ph:map-pin-duotone" />
                          <span class="text-base">{project.location}</span>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</Section>
