---
import Container from '@components/Container.astro'
import PropertySearch from '@components/ui/PropertySearch.astro'
---

<section id="HeroSplit" class="lg:h-[750px] 2xl:h-screen bg-muted-50 dark:bg-muted-950 relative flex lg:flex-row flex-col overflow-hidden">
  <Container>
    <div class="flex flex-col gap-6 justify-center w-full h-full relative pt-48 md:pt-28 pb-20 md:pb-10 lg:py-0 px-5 lg:px-0 z-10">
      <div class="max-w-[370px] flex flex-col gap-6">
        <h1 class="font-sans font-light text-2xl md:text-5xl leading-9 text-center md:text-start md:leading-10 text-muted-900 dark:text-white">Find the house of your dreams.</h1>
        <p class="text-muted-500 dark:text-muted-400 break-words text-center md:text-start text-lg md:text-xl">We help you find the perfect space that will make you and your family happy.</p>
      </div>
      <PropertySearch />
    </div>
  </Container>

  <div class="hidden md:block w-full lg:w-1/2 h-[492px] lg:h-full lg:absolute end-0 top-0 z-0">
    <img src={'/images/photo/hero/3.webp'} class="2xl:min-h-full 2xl:min-w-full" width={900} height={1000} alt="hero" />
  </div>
</section>
