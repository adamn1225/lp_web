---
import Section from '@components/Section.astro'
import Container from '@components/Container.astro'
---

<Section>
  <Container>
    <div class="max-w-3xl relative mx-auto py-20 px-8 bg-cover bg-no-repeat" style="background-image: url('/images/photo/cta.webp');">
      <div class="relative z-[2] w-full h-full flex flex-col justify-center items-center text-white">
        <h2 class="max-w-md text-3xl leading-9 font-sans text-center">Engage with our company and invest in our projects</h2>
        <div class="flex flex-col w-full md:w-max md:flex-row items-center mt-6 gap-2 mb-2">
          <button class="hover:bg-white text-sm w-full md:w-max hover:text-primary-500 transition-all px-4 py-2 min-w-32 min-h-12 rounded border-2 border-white">Invest Now</button>
          <button class="hover:bg-white text-sm w-full md:w-max hover:text-primary-500 transition-all px-4 py-2 min-w-32 min-h-12 rounded border-2 border-white">Learn More</button>
        </div>
      </div>
      <!-- overlay -->
      <div class="overlay absolute inset-0 bg-primary-500/80 z-0"></div>
    </div>
  </Container>
</Section>
