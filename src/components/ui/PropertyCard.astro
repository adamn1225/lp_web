---
import { currency } from '@utils/utils'

interface Props extends Property {}

const props = Astro.props
---

<a href="#">
  <article class="bg-white dark:bg-muted-950 shadow-lg shadow-muted-300/30 dark:shadow-muted-800/20">
    <div class="bg-muted-100 dark:bg-muted-800 h-72">
      <img class="h-full w-full object-cover" alt={props.address} src={props.photo} />
    </div>

    <div class="p-5 bg-white dark:bg-muted-950 border border-muted-200 dark:border-muted-800">
      <div class="flex flex-col">
        <h4 class="font-sans font-bold text-xl text-muted-900 dark:text-white">
          {currency(props.price)}
        </h4>
        <p class="text-sm text-muted-400">
          {props.address}
        </p>
      </div>
      <hr class="h-px border-t border-muted-200 dark:border-muted-800 my-5" />
      <div class="grid grid-cols-3">
        <!-- bedroom -->
        <div class="flex flex-col">
          <div class="flex items-center gap-2 text-muted-900 dark:text-white">
            <svg
              class="size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              style="--darkreader-inline-stroke: currentColor;"
              data-darkreader-inline-stroke=""
              ><path d="M2 20v-8a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v8"></path><path d="M4 10V6a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v4"></path><path d="M12 4v6"></path><path d="M2 18h20"></path>
            </svg>

            <p class="text-lg font-bold">{props.bedrooms}</p>
          </div>

          <p class="text-sm text-muted-400">Bedrooms</p>
        </div>
        <!-- bathroom -->
        <div class="flex flex-col">
          <div class="flex items-center gap-2 text-muted-900 dark:text-white">
            <svg
              class="size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              style="--darkreader-inline-stroke: currentColor;"
              data-darkreader-inline-stroke=""
              ><path d="M9 6 6.5 3.5a1.5 1.5 0 0 0-1-.5C4.683 3 4 3.683 4 4.5V17a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-5"></path><line x1="10" y1="5" x2="8" y2="7"></line><line
                x1="2"
                y1="12"
                x2="22"
                y2="12"></line><line x1="7" y1="19" x2="7" y2="21"></line><line x1="17" y1="19" x2="17" y2="21"></line>
            </svg>

            <p class="text-lg font-bold">{props.bathroom}</p>
          </div>

          <p class="text-sm text-muted-400">Bathroom</p>
        </div>
        <!-- living area -->
        <div class="flex flex-col">
          <div class="flex items-center gap-2 text-muted-900 dark:text-white">
            <svg
              class="size-4"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              style="--darkreader-inline-stroke: currentColor;"
              data-darkreader-inline-stroke=""
              ><path d="M5 3a2 2 0 0 0-2 2"></path><path d="M19 3a2 2 0 0 1 2 2"></path><path d="M21 19a2 2 0 0 1-2 2"></path><path d="M5 21a2 2 0 0 1-2-2"></path><path d="M9 3h1"></path><path
                d="M9 21h1"></path><path d="M14 3h1"></path><path d="M14 21h1"></path><path d="M3 9v1"></path><path d="M21 9v1"></path><path d="M3 14v1"></path><path d="M21 14v1"></path>
            </svg>
            <p class="text-lg font-bold">
              {props.livingArea}mÂ²
            </p>
          </div>

          <p class="text-sm text-muted-400">Living Area</p>
        </div>
      </div>
    </div>
  </article>
</a>
