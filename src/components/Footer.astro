---
import { Icon } from "astro-icon/components";
import Container from "./Container.astro";
import Logo from "./ui/Logo.astro";
---

<footer class="mt-8 px-5 bg-stone-100">
  <Container>
    <div class="pt-8 overflow-x-hidden lg:pt-24 pb-8">
      <div class="grid grid-cols-1 gap-10 lg:gap-0 md:grid-cols-6">
        <div class="md:col-span-2 pe-[5%] lg:pe-[98px]">
          <a
            href="/"
            class="flex xs:justify-self-center md:gap-4 items-center xs:ml-4"
          >
            <Logo class="size-8" />
          </a>
          <p
            class="text-md text-center text-muted-500 dark:text-muted-400 mt-4"
          >
            We are a vaction rental company - (this is where you put a short
            excerpt of Line Properties).
          </p>
          <!-- socials -->
          <div class="mt-4 flex xs:justify-center gap-5 items-center">
            <a href="#">
              <Icon
                name="fa:instagram"
                class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300"
              />
            </a>
            <a href="#">
              <Icon
                name="fa:facebook"
                class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300"
              />
            </a>
          </div>
        </div>
        <!-- company links -->
        <div class="text-center">
          <h4
            class="font-sans text-muted-900 font-semibold text-2xl dark:text-white"
          >
            Company
          </h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a
                href="/about"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Who we are</a
              >
            </li>
            <li>
              <a
                href="/frequently-asked-questions"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >FAQ</a
              >
            </li>
            <li>
              <a
                href="/line-properties-reviews"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Testimonials</a
              >
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div class="text-center">
          <h4
            class="font-sans text-muted-900 font-semibold text-2xl dark:text-white"
          >
            Services
          </h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Reserve a property</a
              >
            </li>
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Submit a property</a
              >
            </li>
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Appointments</a
              >
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div class="text-center">
          <h4
            class="font-sans text-muted-900 font-semibold text-2xl dark:text-white"
          >
            Assistance
          </h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >PDF Guides</a
              >
            </li>
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Help Desk</a
              >
            </li>
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Terms Of Service</a
              >
            </li>
            <li>
              <a
                href="#"
                class="hover:text-secondary footer-link text-lg text-muted-500 dark:text-muted-400 transition-all"
                >Privacy</a
              >
            </li>
          </ul>
        </div>
        <!-- find us -->
        <div class="text-center">
          <h4
            class="font-sans text-muted-900 font-semibold text-xl dark:text-white"
          >
            Find Us
          </h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li class="text-sm text-muted-500 dark:text-muted-400">
              Address here,
            </li>
            <li class="text-sm text-muted-500 dark:text-muted-400">
              Are you guys located in NY?
            </li>
            <li class="text-sm text-muted-500 dark:text-muted-400">
              info@lineproperties.co
            </li>
          </ul>
        </div>
      </div>
      <!-- subscribe -->
      <form
        action=""
        class="mt-16 bg-muted-100 dark:bg-muted-950 flex justify-center items-center rounded ps-4 pe-[5px] max-w-max"
      >
        <input
          type="text"
          placeholder="Email Address"
          class="h-[40px] focus:outline-none bg-white border border-gray-400 flex-1 placeholder:text-muted-300 dark:placeholder:text-muted-700 pl-2"
        />
        <button
          class="h-10 ml-2 rounded text-slate-50 bg-secondary dark:bg-muted-950 dark:text-white dark:hover:bg-primary-500 grid place-items-center px-3.5 hover:bg-secondary text-sm hover:text-slate-50 transition-colors duration-300"
          >Subscribe
        </button>
      </form>
    </div>
  </Container>
</footer>
