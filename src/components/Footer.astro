---
import { Icon } from 'astro-icon/components'
import Container from './Container.astro'
import Logo from './ui/Logo.astro'
---

<footer class="mt-2 px-5 bg-slate-100">
  <Container>
    <div class="pt-8 lg:pt-24 pb-8">
      <div class="grid grid-cols-1 gap-10 lg:gap-0 md:grid-cols-6">
        <div class="md:col-span-2 pe-[5%] lg:pe-[98px]">
          <a href="/" class="flex gap-4 items-center">
            <Logo class="size-8" />
          </a>
          <p class="text-md text-muted-500 dark:text-muted-400 mt-4">We are a Real Estate company. We bring freshness of modern design into your house and at your work.</p>
          <!-- socials -->
          <div class="mt-4 flex gap-5 items-center">
            <a href="#">
              <Icon name="fa:instagram" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
            <a href="#">
              <Icon name="fa:facebook" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
          </div>
        </div>
        <!-- company links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-2xl dark:text-white">Company</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="/about" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Who we are</a>
            </li>
            <li>
              <a href="/about" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Our Proces</a>
            </li>
            <li>
              <a href="/quote" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400transition-all">Get a quote</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Testimonials</a>
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-2xl dark:text-white">Services</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Reserve a property</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Submit a property</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Appointments</a>
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-2xl dark:text-white">Assistance</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">PDF Guides</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Help Desk</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Terms Of Service</a>
            </li>
            <li>
              <a href="#" class="hover:text-cyan-600 footer-link text-lg text-muted-500 dark:text-muted-400 transition-all">Privacy</a>
            </li>
          </ul>
        </div>
        <!-- find us -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-xl dark:text-white">Find Us</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li class="text-sm text-muted-500 dark:text-muted-400">Address here,</li>
            <li class="text-sm text-muted-500 dark:text-muted-400">Are you guys located in NY?</li>
            <li class="text-sm text-muted-500 dark:text-muted-400">info@lineproperties.co</li>
          </ul>
        </div>
      </div>
      <!-- subscribe -->
      <form action="" class="mt-16 bg-muted-100 dark:bg-muted-950 flex justify-between items-center rounded ps-4 pe-[5px] w-[340px]">
        <input type="text" placeholder="Email Address" class="h-[40px] focus:outline-none bg-white border border-gray-400 flex-1 placeholder:text-muted-300 dark:placeholder:text-muted-700 pl-2" />
        <button class="h-10 ml-2 rounded text-slate-50 bg-cyan-600 dark:bg-muted-950 dark:text-white dark:hover:bg-primary-500 grid place-items-center px-3.5 hover:bg-cyan-600 text-sm hover:text-slate-50 transition-colors duration-300"
          >Subscribe
        </button>
      </form>
    </div>
  </Container>
</footer>
