---
import { Icon } from 'astro-icon/components'
import Container from './Container.astro'
import Logo from './ui/Logo.astro'
---

<footer class="mt-auto px-5 bg-white dark:bg-muted-900">
  <Container>
    <div class="pt-8 lg:pt-24 pb-8">
      <div class="grid grid-cols-1 gap-10 lg:gap-0 md:grid-cols-6">
        <div class="md:col-span-2 pe-[5%] lg:pe-[98px]">
          <a href="/" class="flex gap-4 items-center">
            <Logo class="size-8" />
          </a>
          <p class="text-sm text-muted-500 dark:text-muted-400 mt-4">We are a Real Estate company. We bring freshness of modern design into your house and at your work.</p>
          <!-- socials -->
          <div class="mt-4 flex gap-5 items-center">
            <a href="#">
              <Icon name="fa:instagram" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
            <a href="#">
              <Icon name="fa:facebook" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
            <a href="#">
              <Icon name="fa:pinterest" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
            <a href="#">
              <Icon name="fa:medium" class="w-3.5 aspect-square text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-colors duration-300" />
            </a>
          </div>
        </div>
        <!-- company links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-xl dark:text-white">Company</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Who we are</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">How we work</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Get a quote</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Case studies</a>
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-xl dark:text-white">Services</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Property sales</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Property rentals</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Submit a property</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Appointments</a>
            </li>
          </ul>
        </div>
        <!-- more links -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-xl dark:text-white">Assistance</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">PDF Guides</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Help Desk</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Terms Of Service</a>
            </li>
            <li>
              <a href="#" class="footer-link text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 transition-all">Privacy</a>
            </li>
          </ul>
        </div>
        <!-- find us -->
        <div>
          <h4 class="font-sans text-muted-900 font-semibold text-xl dark:text-white">Find Us</h4>
          <ul class="footer-menu mt-4 flex flex-col gap-2">
            <li class="text-sm text-muted-500 dark:text-muted-400">55 San Joaquin Ave. 90893</li>
            <li class="text-sm text-muted-500 dark:text-muted-400">San Francisco, CA.</li>
            <li class="text-sm text-muted-500 dark:text-muted-400">hello@masonry.co</li>
          </ul>
        </div>
      </div>
      <!-- subscribe -->
      <form action="" class="mt-16 bg-muted-100 dark:bg-muted-950 flex justify-between items-center rounded ps-4 pe-[5px] w-[340px]">
        <input type="text" placeholder="Email Address" class="h-[50px] focus:outline-none bg-transparent flex-1 placeholder:text-muted-300 dark:placeholder:text-muted-700" />
        <button class="h-10 rounded bg-white dark:bg-muted-950 dark:text-white dark:hover:bg-primary-500 grid place-items-center px-3.5 py-1.5 hover:bg-primary-500 text-sm hover:text-white transition-colors duration-300"
          >Subscribe
        </button>
      </form>
    </div>
  </Container>
</footer>
